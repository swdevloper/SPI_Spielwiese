<Window x:Class="SPI_Spielwiese.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPI_Spielwiese"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <Button x:Name="btnBindingSimple" Style="{StaticResource specialButton}" Content="Bsp: Binding Simple" Click="btnBindingSimple_Click" />
            <Button x:Name="btnBindingObject" Content="Bsp: Binding Object" Click="btnBindingObject_Click" />
            <Button x:Name="btnBindingCollection" Content="Bsp: Binding Collection" Click="btnBindingCollection_Click" />
            <Button x:Name="btnBindingConverter" Content="Bsp: Binding Converter" Click="btnBindingConverter_Click" />
            <Button x:Name="btnStyles" Content="Bsp: Styles" Click="btnStyles_Click" />
        </StackPanel>
    </Grid>
</Window>
